modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["fontconfig", "ghostscript", "gitFull", "glib", "glibcLocales", "harfbuzz", "nano", "openssl", "pango", "playwright-driver", "postgresql", "zip"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[agent]
integrations = ["python_sendgrid==1.0.0", "styling_replit==1.0.0", "python_openai==1.0.0", "python_database==1.0.0", "python_log_in_with_replit==1.0.0"]
